<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="HURCRover">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import HURCRover urdf file -->
    <xacro:include filename="$(find rover_description)/urdf/rover.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="HURCRover.ros2_control.xacro" />


    <xacro:HURCRover_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
