<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- RViz Material Definitions -->
  <!-- These materials are used by RViz for visualization -->
  <!-- Gazebo ignores these and uses the <gazebo> tags instead -->

  <!-- Chassis material - Blue like Gazebo/Blue -->
  <material name="ChassisBlue">
    <color rgba="0.0 0.4 0.8 1.0"/>
  </material>

  <!-- Structural materials - Grey like Gazebo/Grey -->
  <material name="StructuralGrey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Wheel material - Black like Gazebo/Black -->
  <material name="WheelBlack">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <!-- Arm materials - Orange like Gazebo/Orange -->
  <material name="ArmOrange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>

  <!-- End effector material - Red like Gazebo/Red -->
  <material name="ManipulatorRed">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <!-- Alternative materials for variety -->
  <material name="Aluminum">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>

  <material name="DarkGrey">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

</robot>

